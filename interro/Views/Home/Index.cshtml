@{
    ViewData["Title"] = "Prochaine fermeture";
}

<div class="text-center">
    <h1 class="display-4">Prochaine fermeture</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Closing type</th>
            <th>closing date</th>
            <th>reopening_date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bridge in Model)
        {
            <tr>
                <td>@bridge.boat_name</td>
                <td>@bridge.closing_type</td>
                <td>@bridge.closing_date</td>
                <td>@bridge.reopening_date</td>
            </tr>
        }
    </tbody>
</table>